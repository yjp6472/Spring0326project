<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Mapper xml 에서 자주 사용하는 type 에 별칭 부여하기 -->
	<typeAliases>
		<typeAlias type="com.my.spring0326.users.dto.UsersDto"
			alias="usersDto"/>
		<typeAlias type="com.my.spring0326.cafe.dto.CafeDto"
			alias="cafeDto"/>
		<typeAlias type="com.my.spring0326.cafe.dto.CafeCommentDto"
			alias="cafeCommentDto"/>
		<typeAlias type="com.my.spring0326.file.dto.FileDto"
			alias="fileDto"/>		
	</typeAliases>
	
	<!-- Mapper xml 문서의 위치  설정 -->
	<mappers>
		<mapper resource="com/my/spring0326/mybatis/UsersMapper.xml"/>
		<mapper resource="com/my/spring0326/mybatis/CafeMapper.xml"/>
		<mapper resource="com/my/spring0326/mybatis/CafeCommentMapper.xml"/>
		<mapper resource="com/my/spring0326/mybatis/FileMapper.xml"/>
	</mappers>
</configuration>


